{
  "name": "superstock-error-testing",
  "version": "1.0.0",
  "description": "Comprehensive error testing suite for SuperStock application",
  "main": "wwwroot/js/tests/test-runner.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.js$",
    "test:integration": "jest --testPathPattern=tests/integration/.*\\.test\\.js$",
    "test:e2e": "jest --testPathPattern=tests/e2e/.*\\.test\\.js$",
    "test:error-handler": "jest --testNamePattern=\"EnhancedErrorHandler\"",
    "test:dashboard": "jest --testNamePattern=\"DashboardDataManager\"",
    "test:leaderboard": "jest --testNamePattern=\"LeaderboardDataManager\"",
    "test:performance": "jest --testNamePattern=\"PerformanceOptimizer\"",
    "test:loading": "jest --testNamePattern=\"LoadingStateManager\"",
    "test:debug": "jest --verbose --no-cache",
    "test:update-snapshots": "jest --updateSnapshot",
    "lint": "eslint wwwroot/js/**/*.js",
    "lint:fix": "eslint wwwroot/js/**/*.js --fix",
    "clean": "rimraf coverage test-reports .jest-cache",
    "pretest": "npm run clean",
    "posttest": "npm run generate-report",
    "generate-report": "node wwwroot/js/tests/test-runner.js"
  },
  "keywords": [
    "error-handling",
    "testing",
    "javascript",
    "superstock",
    "jest",
    "integration-testing",
    "e2e-testing"
  ],
  "author": "SuperStock Development Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/user-event": "^14.4.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.1.0",
    "puppeteer": "^20.5.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "jquery": "^3.7.0"
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "globals": {
      "$": "readonly",
      "jQuery": "readonly"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/superstock/superstock.git"
  },
  "bugs": {
    "url": "https://github.com/superstock/superstock/issues"
  },
  "homepage": "https://github.com/superstock/superstock#readme"
}